.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    /* padding-left:15px; *//* padding-right:15px; */
}

.header {
    background-color: #ffffff;
    position:fixed;
    height: 100rpx;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
    display: flex;
    flex-direction: row;
    width: 750rpx;
    align-items: center;
    z-index:99;
    /* padding-left:15px;  *//* padding-right:5px; */
 }

 .search-container {
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    background-color: #f5f5f5;
    border-radius: 50px;
    margin-left: 20rpx;
    /* margin-left: */
  }
  
  .icon {
    width: 14px;
    height: 14px;
    margin-left: 12px;
    margin-right: 8px;
  }

  .in-bar {
    color: #999;
  }

  .bar {
    border-top-right-radius: 15px;
    border-bottom-right-radius: 15px;
    display: inline-block;
    height: 34px;
    /* width:100%; */
    width: 500rpx;
    font-size: 14px;
  }
  .in-bar{
    color: #999;
  }

  .cancel-img {
    width: 14px;
    height: 14px;
    margin-right: 10px;
  }

  .cancel {
    line-height: 34px;
    width: 60px;
    /* margin-left:10px; */
    text-align: center;
    display: inline-block;
    border: none;
  }
    .history {
    width: 690rpx;
    display: flex;
    font-size: 14px;
    margin-top:160rpx;
    flex-direction: column;
  }
  .title{
    display: flex;
    line-height: 15px;
    align-items: center;
  }
  .chunk {
    height: 30rpx;
    width: 5px;
    background-color: #000;
    display: inline-block;
    margin-right: 10px;
  }
  .title text{
    font-size:30rpx;
  }
  .tags {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start; 
    margin-top: 24rpx;
    padding-left: 15px;
    width: 690rpx;
  }

  .tags v-tag {
    margin-right: 10px;
    margin-bottom: 10px;
    /* padding-bottom: 10px; *//* margin-right:6px; */
  }
.books-container {
    width: 570rpx;
    margin-top:100rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding: 0 90rpx 0 90rpx;
    justify-content: space-between;
  }
  
  .books-container v-book{
    margin-bottom: 30rpx;
  }

