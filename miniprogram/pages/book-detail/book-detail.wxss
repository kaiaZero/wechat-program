.container{
  background-color:#f5f5f5;
  width:100%;
}

.head{
  background-color:#fff;
  padding-top:40rpx;
  padding-bottom:40rpx;
  display:flex;
  flex-direction:column;
  align-items:center;
}
.title{
  color:#2f2f2f;
  margin-top:20rpx;
  font-size:38rpx;
  font-weight:600;
}
.author{
  font-size:28rpx;
  color:#999;
}
.head image{
  width: 200rpx;
  height:300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}
.sub-container{
  width:690rpx;
  display:flex;
  flex-direction:column;
  align-items:center;
  margin-top:30rpx;
  background-color:#fff;
  padding:30rpx;
}

.headline{
  font-size:30rpx;
  font-weight:600;
  color:#2f2f2f;
  margin-bottom:20rpx;
}
.comment-container{
  height:240rpx;
  display:flex;
  justify-content: flex-start;
  flex-wrap:wrap;
}
.tag{
  margin-right:15rpx;
  margin-bottom:10rpx;
}
.num{
  margin-left:10rpx;
  font-size:22rpx;
}
.ex-tag1{
  background-color:#fffbdd !important;
}
.ex-tag2{
  background-color:rgba(200, 232, 233, 0.623) !important;
}
.content{
  text-indent:50rpx;
  font-weight:500;
}
.detail-container{
  width:100%;
  display:flex;
  flex-direction:row;
  justify-content:flex-start;
  margin-bottom:100rpx;
  font-size:28rpx;
  color:#666;
}
.vertical{
  display:flex;
  flex-direction: column;
}
.discription{
  color:#999;
  margin-left:30rpx;
}
.post-container{
  position:fixed;
  bottom:0;
  height:100rpx;
  box-shadow:1px -1px 1px #e3e3e3;
  width:690rpx;
  display: flex;
  background-color:#fff;
  align-items: center;
  padding: 0 30rpx;
  justify-content: space-between;
}
.post-fake{
  display:flex;
  align-items: center;
  height:60rpx;
  width:460rpx;
  border:1px solid #999;
  border-radius:15px;
  font-size:22rpx;
  padding-left:20rpx;
}
.like {
    margin-right: 30rpx;
    margin-top: 10rpx;
}
  
.like-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.posting-container{
  position:fixed;
  bottom:0;
  display:flex;
  flex-direction: column;
  align-items: center;
  background-color:#fff;
  width:100%;
  z-index:999;
}
.posting-header{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width:100%;
  border-bottom:1px solid #f5f5f5;
  border-top:1px solid #f5f5f5;
  height:100rpx;
}
.cancel{
  color:#666;
}
.posting-header text{
  padding:25rpx; 
}
.posting-header>text:first-child{
  font-size:28rpx;
  color:#bbb; 
}
.posting-container .comments-container{
  width:690rpx;
  padding:40rpx 30rpx 0 30rpx;
}
.post{
  width:690rpx;
  border-radius:15px;
  background-color:#f5f5f5;
  height:56rpx;
  padding-left:25rpx;
  margin:30rpx auto;
}